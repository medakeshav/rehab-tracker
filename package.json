{
    "name": "rehab-tracker",
    "version": "1.0.0",
    "description": "Personal rehabilitation exercise tracking PWA for PCL reconstruction recovery",
    "private": true,
    "type": "module",
    "scripts": {
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
